<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layout_clickable">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="image_clickable">
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Widget.DesignSystem.NumberPicker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/blue3</item>
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

        <style name="TypographyStyles.TextParent" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TypographyStyles.Text1" parent="TypographyStyles.TextParent">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TypographyStyles.Text1.Bold" parent="TypographyStyles.TextParent">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/worksans_semibold</item>
